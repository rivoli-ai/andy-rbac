@page "/subjects"
@using Andy.Rbac.Web.Services
@inject RbacApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Subjects - Andy RBAC</PageTitle>

<div class="page-header">
    <div class="page-header-actions">
        <div>
            <h1>Subjects</h1>
            <p class="subtitle">Manage users and their role assignments</p>
        </div>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            + New Subject
        </button>
    </div>
</div>

<div class="card mb-3">
    <div class="d-flex align-center gap-2">
        <div class="search-box" style="flex: 1;">
            <input type="text" class="form-control" placeholder="Search subjects..." @bind="_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
        </div>
        <button class="btn btn-secondary" @onclick="Search">Search</button>
    </div>
</div>

@if (!string.IsNullOrEmpty(_error))
{
    <div class="card" style="background: rgba(220,53,69,0.1); border-color: var(--danger); margin-bottom: 1rem;">
        <p style="color: var(--danger); margin: 0;">@_error</p>
    </div>
}

<div class="table-container">
    @if (_loading)
    {
        <div class="loading">
            <div class="spinner"></div>
        </div>
    }
    else if (_subjects.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-state-title">No subjects found</div>
            <p class="empty-state-text">Create your first subject to get started.</p>
            <button class="btn btn-primary" @onclick="ShowCreateModal">Create Subject</button>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>External ID</th>
                    <th>Display Name</th>
                    <th>Provider</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in _subjects)
                {
                    <tr>
                        <td><code>@subject.ExternalId</code></td>
                        <td>@(subject.DisplayName ?? subject.Email ?? "-")</td>
                        <td><code>@subject.Provider</code></td>
                        <td>
                            <span class="badge @(subject.IsActive ? "badge-success" : "badge-danger")">
                                @(subject.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td class="text-muted">@subject.CreatedAt.ToLocalTime().ToString("d")</td>
                        <td>
                            <button class="btn btn-secondary btn-sm" @onclick="() => ViewSubject(subject)">View</button>
                            @if (subject.IsActive)
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => DeactivateSubject(subject)">Deactivate</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-between align-center mt-3">
            <span class="text-muted">Showing @_subjects.Count of @_total subjects</span>
        </div>
    }
</div>

@if (_showCreateModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-title">Create Subject</h3>
                <button class="btn btn-icon" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label required">External ID</label>
                    <input type="text" class="form-control" @bind="_newExternalId" placeholder="user@example.com or user-id-123" />
                    <p class="form-text">Unique identifier from your identity provider</p>
                </div>
                <div class="form-group">
                    <label class="form-label required">Provider</label>
                    <input type="text" class="form-control" @bind="_newProvider" placeholder="andy-auth" />
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" @bind="_newEmail" placeholder="user@example.com" />
                </div>
                <div class="form-group">
                    <label class="form-label">Display Name</label>
                    <input type="text" class="form-control" @bind="_newDisplayName" placeholder="John Doe" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="CreateSubject" disabled="@_saving">
                    @(_saving ? "Creating..." : "Create")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool _loading = true;
    private bool _saving = false;
    private string _searchTerm = "";
    private string? _error;
    private List<SubjectDto> _subjects = new();
    private long _total = 0;
    private bool _showCreateModal = false;

    private string _newExternalId = "";
    private string _newProvider = "andy-auth";
    private string? _newEmail;
    private string? _newDisplayName;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubjects();
    }

    private async Task LoadSubjects()
    {
        _loading = true;
        _error = null;
        try
        {
            var query = string.IsNullOrWhiteSpace(_searchTerm) ? null : _searchTerm;
            var result = await ApiService.GetSubjectsAsync(query);
            _subjects = result.Items;
            _total = result.Total;
        }
        catch (Exception ex)
        {
            _error = $"Failed to load subjects: {ex.Message}";
            _subjects = new();
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Search()
    {
        await LoadSubjects();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await Search();
    }

    private void ShowCreateModal()
    {
        _newExternalId = "";
        _newProvider = "andy-auth";
        _newEmail = null;
        _newDisplayName = null;
        _showCreateModal = true;
    }

    private void CloseModal()
    {
        _showCreateModal = false;
    }

    private async Task CreateSubject()
    {
        if (string.IsNullOrWhiteSpace(_newExternalId) || string.IsNullOrWhiteSpace(_newProvider))
            return;

        _saving = true;
        _error = null;
        try
        {
            var request = new CreateSubjectRequest(_newExternalId, _newProvider, "user", _newEmail, _newDisplayName);
            await ApiService.CreateSubjectAsync(request);
            CloseModal();
            await LoadSubjects();
        }
        catch (Exception ex)
        {
            _error = $"Failed to create subject: {ex.Message}";
        }
        finally
        {
            _saving = false;
        }
    }

    private void ViewSubject(SubjectDto subject)
    {
        Navigation.NavigateTo($"/subjects/{subject.Id}");
    }

    private async Task DeactivateSubject(SubjectDto subject)
    {
        _error = null;
        try
        {
            await ApiService.DeleteSubjectAsync(subject.Id);
            await LoadSubjects();
        }
        catch (Exception ex)
        {
            _error = $"Failed to deactivate subject: {ex.Message}";
        }
    }
}
