@page "/teams"
@using Andy.Rbac.Web.Services
@inject RbacApiService ApiService

<PageTitle>Teams - Andy RBAC</PageTitle>

<div class="page-header">
    <div class="page-header-actions">
        <div>
            <h1>Teams</h1>
            <p class="subtitle">Organize subjects into teams with shared permissions</p>
        </div>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            + New Team
        </button>
    </div>
</div>

<div class="card mb-3">
    <div class="d-flex align-center gap-2">
        <div class="search-box" style="flex: 1;">
            <input type="text" class="form-control" placeholder="Search teams..." @bind="_searchTerm" @bind:event="oninput" />
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(_error))
{
    <div class="card" style="background: rgba(220,53,69,0.1); border-color: var(--danger); margin-bottom: 1rem;">
        <p style="color: var(--danger); margin: 0;">@_error</p>
    </div>
}

<div class="table-container">
    @if (_loading)
    {
        <div class="loading">
            <div class="spinner"></div>
        </div>
    }
    else if (FilteredTeams.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-state-title">No teams found</div>
            <p class="empty-state-text">Create your first team to get started.</p>
            <button class="btn btn-primary" @onclick="ShowCreateModal">Create Team</button>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Members</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in FilteredTeams)
                {
                    <tr>
                        <td>
                            <strong>@team.Name</strong>
                            @if (!string.IsNullOrEmpty(team.Description))
                            {
                                <br /><span class="text-muted text-sm">@team.Description</span>
                            }
                        </td>
                        <td><code>@team.Code</code></td>
                        <td>
                            <span class="badge badge-info">@team.MemberCount members</span>
                        </td>
                        <td>
                            <span class="badge @(team.IsActive ? "badge-success" : "badge-danger")">
                                @(team.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td class="text-muted">@team.CreatedAt.ToLocalTime().ToString("d")</td>
                        <td>
                            <button class="btn btn-secondary btn-sm">View</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteTeam(team)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (_showCreateModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-title">Create Team</h3>
                <button class="btn btn-icon" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label required">Code</label>
                    <input type="text" class="form-control" @bind="_newTeamCode" placeholder="engineering" />
                </div>
                <div class="form-group">
                    <label class="form-label required">Name</label>
                    <input type="text" class="form-control" @bind="_newTeamName" placeholder="Engineering Team" />
                </div>
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" @bind="_newTeamDescription" rows="3" placeholder="Optional description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="CreateTeam" disabled="@_saving">
                    @(_saving ? "Creating..." : "Create")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool _loading = true;
    private bool _saving = false;
    private string _searchTerm = "";
    private string? _error;
    private List<TeamDto> _teams = new();
    private bool _showCreateModal = false;

    private string _newTeamCode = "";
    private string _newTeamName = "";
    private string? _newTeamDescription;

    private List<TeamDto> FilteredTeams => string.IsNullOrWhiteSpace(_searchTerm)
        ? _teams
        : _teams.Where(t =>
            t.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            t.Code.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (t.Description?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadTeams();
    }

    private async Task LoadTeams()
    {
        _loading = true;
        _error = null;
        try
        {
            _teams = await ApiService.GetTeamsAsync();
        }
        catch (Exception ex)
        {
            _error = $"Failed to load teams: {ex.Message}";
            _teams = new();
        }
        finally
        {
            _loading = false;
        }
    }

    private void ShowCreateModal()
    {
        _newTeamCode = "";
        _newTeamName = "";
        _newTeamDescription = null;
        _showCreateModal = true;
    }

    private void CloseModal()
    {
        _showCreateModal = false;
    }

    private async Task CreateTeam()
    {
        if (string.IsNullOrWhiteSpace(_newTeamCode) || string.IsNullOrWhiteSpace(_newTeamName))
            return;

        _saving = true;
        _error = null;
        try
        {
            var request = new CreateTeamRequest(_newTeamCode, _newTeamName, _newTeamDescription, null, null);
            await ApiService.CreateTeamAsync(request);
            CloseModal();
            await LoadTeams();
        }
        catch (Exception ex)
        {
            _error = $"Failed to create team: {ex.Message}";
        }
        finally
        {
            _saving = false;
        }
    }

    private async Task DeleteTeam(TeamDto team)
    {
        _error = null;
        try
        {
            await ApiService.DeleteTeamAsync(team.Id);
            await LoadTeams();
        }
        catch (Exception ex)
        {
            _error = $"Failed to delete team: {ex.Message}";
        }
    }
}
